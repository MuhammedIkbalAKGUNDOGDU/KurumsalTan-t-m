<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .navbar {
        display: flex;
        flex-direction: column;
        padding : 5%;
    }

    .logo {
        width: 200px;
        height: auto;
    }

    .cleanhouse {
        margin-top: 50px;
        display: flex;
        border-color: #0098d47e;
        border-width: 2px;
        border-radius: 10px;
        border-style: solid;
        max-width: 1000px;
        padding: 50px;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 50px;
    }

    .button1 {
        margin-top: 20px;
        display: inline-block;
        padding: 10px 20px;
        background-color: #0098d47e;
        color: black;
        text-decoration: none;
        border-radius: 10px;
        border: none;
        text-align: center;
    }

        .button1:hover {
            background-color: #007bb3;
            cursor: pointer;
        }
    .cleanhouse-1 {
        background-color: #0098d47e;
        width: max-content;
        font-size: medium;
        border-radius: 8px;
        padding: 5px;
        margin-top: 30px;
    }

    .cleanhouse-2 {
        font-size: medium;
        font-size: x-large;
        margin-top: 20px;
        margin-bottom: 20px;
    }

    h3 {
        margin: 0%;
    }

    .cleanhouse-3 {
        font-size: smaller;
    }

    .cleanhouse-3-p {
        margin: 0%;
    }

    .evinitemizleyelim {
        margin-top: 30px;
        display: flex;
        flex-direction: column;
    }

    .img-container {
        margin-left: 10px;
        position: relative;
        display: flex;
    }

        .img-container img {
            width: 250px;
            height: 130px;
        }

    .img-p {
        position: absolute;
        color: #0098d4;
        font-weight: bolder;
        left: 50%;
        font-size: smaller;
        text-wrap: nowrap;
        top: 80%;
        transform: translate(-50%, -80%);
    }

    .evinitemizleyelim-inner {
        display: flex;
    }

    .label-1 {
        margin-left: 10px;
        font-size: 2cap;
        font-weight: bolder;
    }

    .text-center-cleanhouse {
        font-size: x-large;
        font-weight: bolder;
        width: 100%;
        text-align: center;
    }

    .cleanhouse3 {
        display: flex;
        flex-direction: column;
        background-image: url('images/backgorund.jpg'); /* Arka plan resminin URL'si */
        background-size: cover; /* Arka plan resminin boyutlandırılması */
        background-position: center; /* Arka plan resminin konumu */
    }

    .cleanhouse4 {
        width: 100%;
        display: grid;
        grid-template-columns: 1fr 1fr; /* İki sütunlu grid */
        gap: 20px; /* Grid öğeleri arasındaki boşluk */
        padding: 20px;
    }

    .madde {
        z-index: 1;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }

    .footer {
        background-color: #0098d4;
        color: #fff;
        padding: 20px;
        text-align: center;
        width: 100%;
    }

    .footer-madde {
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .fixed-button {
        position: fixed;
        bottom: 20px;
        right: 20px;
        margin-top: 20px;
        display: inline-block;
        padding: 10px 20px;
        background-color: #0098d47e;
        color: black;
        text-decoration: none;
        border-radius: 10px;
        border: none;
        text-align: center;
        width: 200px;
